generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  cpf String @unique
  telephone String
  address String
  course String
  password_hash String
  status Boolean

  created_at DateTime @default(now())
  @@map("users")
}

model SchoolGrade{
  id String @id @default(uuid())
  cpf String
  school_subject String
  school_grade String

  @@map("school_grades")
}

model Admin{
  id String @id @default(uuid())
  user String
  password_hash String
  name String
}

model Employee{
  id String @id @default(uuid())
  name String
  position String
  user String @unique
  password_hash String
}
